<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background of ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light Gray Background -->
            <corners android:radius="10dp"/> <!-- Rounded Corners -->
        </shape>
    </item>

    <!-- Progress Fill -->
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF8A65" android:endColor="#FF7043" android:angle="0"/> <!-- Orange Gradient -->
            <corners android:radius="10dp"/> <!-- Rounded Corners -->
        </shape>
    </item>

</layer-list>
